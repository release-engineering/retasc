{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "group:all",
    ":disableDependencyDashboard",
    "schedule:weekly"
  ],
  "dockerfile": {
    "managerFilePatterns": [
      "/Containerfile/"
    ]
  },
  "packageRules": [
    {
      "description": "Patch and digest updates",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "all dependencies",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchDepTypes": ["requires-python"],
      "enabled": false
    }
  ],
  "constraints": {
    "python": ">=3.12,<3.14"
  }
}
